{{#if invalid}}
  חומר לא נמצא
{{else}}
  <form class="form-horizontal">
    <div class="form-group">
      <div class="col-sm-10">
        {{ name }}
      </div>
      <label for="name" class="col-sm-2 control-label">שם</label>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        {{ family }}
      </div>
      <label for="family" class="col-sm-2 control-label">משפחה</label>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        {{ vendor }}
      </div>
      <label for="vendor" class="col-sm-2 control-label">ספק</label>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        {{ castable }}
      </div>
      <label for="castable" class="col-sm-2 control-label">יציקה</label>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        {{ moldable }}
      </div>
      <label for="moldable" class="col-sm-2 control-label">תבנית</label>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        {{ etchable }}
      </div>
      <label for="etchable" class="col-sm-2 control-label">גריעה</label>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        {{ cuttable }}
      </div>
      <label for="cuttable" class="col-sm-2 control-label">חיתוך</label>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        {{ brushable }}
      </div>
      <label for="brushable" class="col-sm-2 control-label">הברשה</label>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        {{ recyclable }}
      </div>
      <label for="recyclable" class="col-sm-2 control-label">מיחזור</label>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        {{ color }}
      </div>
      <label for="color" class="col-sm-2 control-label">צבע</label>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        {{ opacity }}
      </div>
      <label for="opacity" class="col-sm-2 control-label">שקיפות</label>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        {{ flexability }}
      </div>
      <label for="flexability" class="col-sm-2 control-label">גמישות</label>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        {{ toughness }}
      </div>
      <label for="toughness" class="col-sm-2 control-label">קשיחות</label>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        {{ durability }}
      </div>
      <label for="durability" class="col-sm-2 control-label">עמידות</label>
    </div>
  </form>
{{/if}}
