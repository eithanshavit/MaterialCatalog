{{#if invalid}}
  חומר לא נמצא
{{else}}
  <form class="form-horizontal">
    <div class="form-group">
      <div class="col-sm-10">
        {{ name }}
      </div>
      <label for="name" class="col-sm-2 control-label">שם</label>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        {{ family }}
      </div>
      <label for="family" class="col-sm-2 control-label">משפחה</label>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        {{ vendor }}
      </div>
      <label for="vendor" class="col-sm-2 control-label">ספק</label>
    </div>
  </form>
{{/if}}
